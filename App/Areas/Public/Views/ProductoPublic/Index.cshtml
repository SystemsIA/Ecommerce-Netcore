@model IEnumerable<Domain.Models.Productos>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
}


<div id=carouselFrontImages class="carousel slide" data-bs-ride=carousel>
	<div class=carousel-inner>
		<div class="carousel-item active" data-bs-interval=2000>
			<img src=https://images.unsplash.com/photo-1472851294608-062f824d29cc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80 class="d-block w-100 img-fluid" alt=...>
		</div>
		<div class=carousel-item data-bs-interval=2000>
			<img src=https://images.unsplash.com/photo-1472851294608-062f824d29cc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80 class="d-block w-100 img-fluid" alt=...>
		</div>
		<div class=carousel-item>
			<img src=https://images.unsplash.com/photo-1605902711622-cfb43c4437b5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=869&q=80 class="d-block w-100 img-fluid" alt=...>
		</div>
	</div>
	<button class=carousel-control-prev type=button data-bs-target=#carouselFrontImages data-bs-slide=prev>
		<span class=carousel-control-prev-icon aria-hidden=true></span>
		<span class=visually-hidden>Anterior</span>
	</button>
	<button class=carousel-control-next type=button data-bs-target=#carouselFrontImages data-bs-slide=next>
		<span class=carousel-control-next-icon aria-hidden=true></span>
		<span class=visually-hidden>Siguiente</span>
	</button>
</div>

<div class="container my-2 my-md-3">
	<h4 class="text-center text-capitalize text-black-50 border border-2 px-3 py-2">Nuevos productos</h4>
	<div class="m-4 row row-cols-1 row-cols-md-3 gap-3">
		@foreach (var item in Model)
		{
			<div class="col d-flex justify-content-center my-2">
				<div class="card" style="width: 18rem;">
					<img src="@item.ImagenPrincipal" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">Card title</h5>
						<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
						<a href="#" class="btn btn-primary">Go somewhere</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>