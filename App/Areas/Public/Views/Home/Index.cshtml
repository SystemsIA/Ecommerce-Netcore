@model IEnumerable<Domain.Models.Productos>

@{
	ViewData["Title"] = "Inicio";
	Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
}


<div id=carouselFrontImages class="carousel slide" data-bs-ride=carousel>
	<div class=carousel-inner>
		<div class="carousel-item active" data-bs-interval=10000>
			<img src="~/galeria/gal01.jpg" class="d-block w-100" alt=...>
		</div>
		<div class=carousel-item data-bs-interval=2000>
			<img src="~/galeria/gal02.jpg" class="d-block w-100" alt=...>
		</div>
		<div class=carousel-item>
			<img src="~/galeria/gal03.jpg" class="d-block w-100" alt=...>
		</div>
	</div>
	<button class=carousel-control-prev type=button data-bs-target=#carouselFrontImages data-bs-slide=prev>
		<span class=carousel-control-prev-icon aria-hidden=true></span>
		<span class=visually-hidden>Anterior</span>
	</button>
	<button class=carousel-control-next type=button data-bs-target=#carouselFrontImages data-bs-slide=next>
		<span class=carousel-control-next-icon aria-hidden=true></span>
		<span class=visually-hidden>Siguiente</span>
	</button>
</div>

<div class="container my-2 my-md-3">
	<h4 class="text-center text-capitalize color-primary border border-2 px-3 py-2">Nuevos productos</h4>
	<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
		@foreach (var item in Model)
		{
			<div class="col">
				<div class="card h-100 w-100">
					<img src="@item.ImagenPrincipal" class="card-img-top" alt="@item.Nombre">
					<div class="card-body">
						<h5 class="card-title text-sm-center text-black">@item.Nombre</h5>
						<p class="card-text text-sm-center">@item.Descripcion</p>
						<div class="text-center my-1 my-md-3">
							Precio: S/.<span class="text-muted text-decoration-underline">@item.PrecioNormal</span>
						</div>
						<div class="text-center">
							<a class="btn btn-primary bg-primary" asp-controller="ProductoPublic" asp-action="Details" asp-route-id="@item.Id">Ver Producto</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>