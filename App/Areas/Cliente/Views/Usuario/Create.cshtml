@model App.Areas.Cliente.Data.UsuarioDto

@{
	ViewData["Title"] = "Registrarse";
	Layout = "~/Areas/Cliente/Views/Shared/_Layout.cshtml";
}

<hr/>
<div class="container">
	<div class="row d-flex justify-content-center">
		<h1 class="color-primary text-center">Registrarse - Ecopeque</h1>
		<div class="col-lg-6 col-md-6 col-sm-6">
			<span class="text-danger">@ViewData["message"]</span>
			<form class="row gap-3" asp-action=Create>
				<div asp-validation-summary=ModelOnly class=text-danger></div>
				<div class=form-group>
					<label asp-for=Email class=control-label>Correo</label>
					<input asp-for=Email class=form-control required/>
					<span asp-validation-for=Email class=text-danger></span>
				</div>
				<div class=form-group>
					<label asp-for=Password class=control-label>Contraseña</label>
					<input asp-for=Password class=form-control required type="password"/>
					<span asp-validation-for=Password class=text-danger></span>
				</div>
				<div class=form-group>
					<label asp-for=Nombre class=control-label></label>
					<input asp-for=Nombre class=form-control required/>
					<span asp-validation-for=Nombre class=text-danger></span>
				</div>
				<div class=form-group>
					<label asp-for=Apellido class=control-label></label>
					<input asp-for=Apellido class=form-control required/>
					<span asp-validation-for=Apellido class=text-danger></span>
				</div>
				<div class="form-group d-flex flex-column gap-3 align-content-center">
					<input type=submit value="Registrarse en ecopeques" class="btn btn-primary"/>
				</div>
			</form>
			<div class="form-group">
				Si tiene una cuenta inicia sesión <a asp-controller=Cuenta asp-action=Login>aquí</a>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}